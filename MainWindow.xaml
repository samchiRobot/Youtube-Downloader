<Window x:Class="Youtube_Downloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Youtube_Downloader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="380">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="URL" Width="50"/>
                <TextBox x:Name="tBoxURL" Width="250"/>
                <Button x:Name="BtnUrlSearch" Content="..." Width="40" Margin="10 0 "/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Path" Width="50"/>
                <TextBox x:Name="tBoxFilePath" Width="250"/>
                <Button x:Name="BtnPathSearch" Content="..." Width="40" Margin="10 0 "/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <ComboBox x:Name="CboxResolution"/>
                <Button x:Name="BtnDownload" Content="Download" Click="BtnDownload_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
